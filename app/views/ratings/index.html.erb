<h2>Rating statistics</h2>

<p>Number of ratings <%= @ratings.count %></p>

<div class="row">
  <div class="col-sm-3">
    <p><h2>Best beers</h2>

    <%= render 'top_list', objects: @best_beers %>
  </div>
  <div class="col-sm-3">
    <p><h2>Best breweries</h2>

    <%= render 'top_list', objects: @best_breweries %>
  </div>
  <div class="col-sm-3">
    <p><h2>Best styles</h2>

    <%= render 'top_list', objects: @best_styles %>
  </div>
</div>

<p><h2>Most active users</h2></p>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Username</th>
      <th>favorite beer</th>
      <th>preferred style</th>
      <th>favorite brewery</th>
      <th>ratings</th>
    </tr>
  </thead>

  <tbody>
	<% @most_active_raters.each do |user| %>
	  <tr>
	    <td> <%= link_to user.username, user %> </td>
	    <td> <%= link_to user.favorite_beer.name, user.favorite_beer %> </td>
	    <td> <%= link_to user.favorite_style.name, user.favorite_style %> </td>
	    <td> <%= link_to user.favorite_brewery.name, user.favorite_brewery %> </td>
	    <td> <%= user.ratings_count %> </td>
      </tr>
	<% end %>
  </tbody>
</table>
<p><h2>Recent ratings</h2></p>
<ul>
  <% @recent.each do |rating| %>
    <li> <%= rating %> <%= link_to rating.user.username, rating.user %> </li>
  <% end %>
</ul>

<%= link_to 'New Rating', new_rating_path %>